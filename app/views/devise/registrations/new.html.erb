<div class="page">
  <br><br><br><br>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="box">
    <h1>Signup</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: 'signup-form'}) do |f| %>

        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>

        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password" %>
        <%# <% if @minimum_password_length %>
        <!-- <em>(<%= @minimum_password_length %> characters minimum)</em> -->
        <%# <% end %>

        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation" %>

        <%= f.submit "Signup" %>

      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
